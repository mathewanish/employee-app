<?xml version="1.0" encoding="utf-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.DMI.eTechChef" version="0.0.2">
  <name>eTECH CHEF</name>
  <description>App for DMI’s 5th annual TECH CHEF grilling competition.</description>
  <author href="http://DMInc.com" email="amathew@dminc.in">Anish Mathew</author>

  <plugin name="org.apache.cordova.dialogs" />
  <plugin name="org.apache.cordova.splashscreen" version="0.2.7" source="pgb"/>
  <plugin name="org.apache.cordova.network-information" />
  <plugin name="org.apache.cordova.statusbar" />
  <plugin name="org.apache.cordova.device" />

  <!-- Platform on which the App is Supported -->
  <platform name="ios" />
  <platform name="android" />

  <content src="index.html" />
  
  <!-- Preferences-->
  <preference name="phonegap-version" value="3.7.0" />
  <preference name="orientation" value="portrait" />
  <preference name="target-device" value="universal" />
  <preference name="fullscreen" value="true" />
  <preference name="prerendered-icon" value="true" />
  <preference name="exit-on-suspend" value="true" />
  <!-- iOS: Auto hides the splash on iOS -->
  <preference name="AutoHideSplashScreen" value="true" />
  <!-- android: Timeout for the Splash on Android in milliseconds -->
  <preference name="SplashScreenDelay" value="4000" />

  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="StatusBarBackgroundColor" value="#000000" />
  <preference name="StatusBarStyle" value="lightcontent" />
  
  <!-- Default Icon-->
  <icon src="icon.png" />
  
  <!--Icons - Android-->
  <icon src="icons/android/icon-ldpi.png" platform="android" qualifier="ldpi" />
  <icon src="icons/android/mdpi.png" platform="android" qualifier="mdpi" />
  <icon src="icons/android/hdpi.png" platform="android" qualifier="hdpi" />
  <icon src="icons/android/xhdpi.png" platform="android" qualifier="xhdpi" />
  <icon src="icons/android/xxhdpi.png" platform="android" qualifier="xxhdpi" />
  <icon src="icons/android/xxxhdpi.png" platform="android" qualifier="fr-xxhdpi" />

  <!--Icons - iOS 7-->
  <!-- iPhone / iPod Touch  -->
  <icon src="icons/ios6/icon60.png" platform="ios" width="60" height="60" />
  <icon src="icons/ios6/icon120.png" platform="ios" width="120" height="120" />
  <!-- iPad -->
  <icon src="icons/ios6/icon76.png" platform="ios" width="76" height="76" />
  <icon src="icons/ios6/icon152.png" platform="ios" width="152" height="152" />
  <!-- Settings Icon -->
  <icon src="icons/ios6/icon29.png" platform="ios" width="29" height="29" />
  <icon src="icons/ios6/icon58.png" platform="ios" width="58" height="58" />
  <!-- Spotlight Icon -->
  <icon src="icons/ios6/icon40.png" platform="ios" width="40" height="40" />
  <icon src="icons/ios6/icon80.png" platform="ios" width="80" height="80" />

  <!--Icons - iOS 6.1-->
  <!-- iPhone / iPod Touch -->
  <icon src="icons/ios6/icon57.png" platform="ios" width="57" height="57" />
  <icon src="icons/ios6/icon114.png" platform="ios" width="114" height="114" />
  <!-- iPad -->
  <icon src="icons/ios6/icon72.png" platform="ios" width="72" height="72" />
  <icon src="icons/ios6/icon144.png" platform="ios" width="144" height="144" />
  <!-- iPhone Spotlight and Settings Icon -->
  <icon src="icons/ios6/icon29.png" platform="ios" width="29" height="29" />
  <icon src="icons/ios6/icon58.png" platform="ios" width="58" height="58" />
  <!-- iPad Spotlight and Settings Icon -->
  <icon src="icons/ios6/icon50.png" platform="ios" width="50" height="50" />
  <icon src="icons/ios6/icon100.png" platform="ios" width="100" height="100" />

  <!-- Default Splash Screen-->
  <splash src="splash.png" />
  
  <!-- iOS Splash Screen-->
  <!-- iPhone and iPod touch -->
  <splash src="splashes/ios/320x480.png" platform="ios" width="320" height="480" />
  <splash src="splashes/ios/640x960.png" platform="ios" width="640" height="960" />
  <!-- iPhone 5 / iPod Touch (5th Generation) -->
  <splash src="splashes/ios/640x1136.png" platform="ios" width="640" height="1136" />
  <!-- iPad -->
  <splash src="splashes/ios/768x1024.png" platform="ios" width="768" height="1024" />
  <splash src="splashes/ios/1024x768.png" platform="ios" width="1024" height="768" />
  <!-- Retina iPad -->
  <splash src="splashes/ios/1536x2048.png" platform="ios" width="1536" height="2048" />
  <splash src="splashes/ios/2048x1536.png" platform="ios" width="2048" height="1536" />

  <splash src="splashes/android/480x800.png" />

  <!-- Android Splash Screen-->
  <splash src="splashes/android/200x320.png" platform="android" qualifier="ldpi" />
  <splash src="splashes/android/320x480.png" platform="android" qualifier="mdpi" />
  <splash src="splashes/android/480x800.png" platform="android" qualifier="hdpi" />
  <splash src="splashes/android/720x1280.png" platform="android" qualifier="xhdpi" />
</widget >
