<?xml version="1.0" encoding="utf-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.DMI.eTechChef" version="0.0.2">
  <name>eTECH CHEF</name>
  <description>App for DMI’s 6th annual TECH CHEF grilling competition.</description>
  <author href="http://DMInc.com" email="amathew@dminc.com">Anish Mathew</author>

  <plugin name="org.apache.cordova.dialogs" />
  <!-- <plugin name="org.apache.cordova.splashscreen" version="0.2.7" source="pgb"/> -->s
  <plugin name="org.apache.cordova.network-information" />
  <plugin name="org.apache.cordova.statusbar" />
  <plugin name="org.apache.cordova.device" />

  <!-- Platform on which the App is Supported -->
  <platform name="ios" />
  <platform name="android" />

  <content src="index.html" />
  
  <!-- Preferences-->
  <preference name="phonegap-version" value="cli-6.5.0" />
  <preference name="orientation" value="portrait" />
  <preference name="target-device" value="universal" />
  <preference name="fullscreen" value="true" />
  <preference name="prerendered-icon" value="true" />
  <preference name="exit-on-suspend" value="true" />
  <!-- iOS: Auto hides the splash on iOS -->
  <preference name="AutoHideSplashScreen" value="false" />
  <!-- android: Timeout for the Splash on Android in milliseconds -->
  <preference name="SplashScreenDelay" value="4000" />
  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="StatusBarBackgroundColor" value="#000000" />
  <preference name="StatusBarStyle" value="lightcontent" />
  <preference name="FadeSplashScreen" value="true"/>
  <preference name="FadeSplashScreenDuration" value="0.7"/>
  
  <feature name="SplashScreen">
    <param name="ios-package" value="CDVSplashScreen" />
    <param name="onload" value="true" />
  </feature>
  
  <!-- Default Icon-->
  <icon src="icon.png" />
  
  <!--Icons - Android-->
  <icon src="icons/android/ldpi.png" platform="android" qualifier="ldpi" />
  <icon src="icons/android/mdpi.png" platform="android" qualifier="mdpi" />
  <icon src="icons/android/hdpi.png" platform="android" qualifier="hdpi" />
  <icon src="icons/android/xhdpi.png" platform="android" qualifier="xhdpi" />s
  <icon src="icons/android/xxhdpi.png" platform="android" qualifier="xxhdpi" />
  <icon src="icons/android/xxxhdpi.png" platform="android" qualifier="fr-xxhdpi" />

  <!-- iPhone 6 / 6+ -->
  <icon src="icons/ios/icon-60@3x.png" platform="ios" width="180" height="180" />

  <!-- iPhone / iPod Touch  -->
  <icon src="icons/ios/icon-60.png" platform="ios" width="60" height="60" />
  <icon src="icons/ios/icon-60@2x.png" platform="ios" width="120" height="120" />

  <!-- iPad -->
  <icon src="icons/ios/icon-76.png" platform="ios" width="76" height="76" />
  <icon src="icons/ios/icon-76@2x.png" platform="ios" width="152" height="152" />
  <icon src="icons/ios/icon-83.5@2x.png" platform="ios" width="167" height="167" />

  <!-- Settings Icon -->
  <icon src="icons/ios/icon-small.png" platform="ios" width="29" height="29" />
  <icon src="icons/ios/icon-small@2x.png" platform="ios" width="58" height="58" />
  <icon src="icons/ios/icon-small@3x.png" platform="ios" width="87" height="87" />

  <!-- Spotlight Icon -->
  <icon src="icons/ios/icon-40.png" platform="ios" width="40" height="40" />
  <icon src="icons/ios/icon-40@2x.png" platform="ios" width="80" height="80" />
  <icon src="icons/ios/icon-40@3x.png" platform="ios" width="120" height="120" />

  <!-- iPhone / iPod Touch -->
  <icon src="icons/ios/icon.png" platform="ios" width="57" height="57" />
  <icon src="icons/ios/icon@2x.png" platform="ios" width="114" height="114" />

  <!-- iPad -->
  <icon src="icons/ios/icon-72.png" platform="ios" width="72" height="72" />
  <icon src="icons/ios/icon-72@2x.png" platform="ios" width="144" height="144" />

  <!-- iPhone Spotlight and Settings Icon -->
  <icon src="icons/ios/icon-small.png" platform="ios" width="29" height="29" />
  <icon src="icons/ios/icon-small@2x.png" platform="ios" width="58" height="58" />

  <!-- iPad Spotlight and Settings Icon -->
  <icon src="icons/ios/icon-50.png" platform="ios" width="50" height="50" />
  <icon src="icons/ios/icon-50@2x.png" platform="ios" width="100" height="100" />
  
  
  <!-- Default Splash Screen-->
  <splash src="splash.png" />
  
  <!-- iOS Splash Screen-->
  <!-- iPhone and iPod touch -->
  <splash src="splashes/ios/Default.png" platform="ios" width="320" height="480" />
  <splash src="splashes/ios/Default@2x.png" platform="ios" width="640" height="960" />
  <!-- iPhone 5 / iPod Touch (5th Generation) -->
  <splash src="splashes/ios/Default-568h@2x.png" platform="ios" width="640" height="1136" />
  <!-- iPad -->
  <splash src="splashes/ios/Default-667h@2x.png" platform="ios" width="750" height="1334" />
  <splash src="splashes/ios/Default-Portrait.png" platform="ios" width="768" height="1024" />
  <!-- Retina iPad -->
  <splash src="splashes/ios/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
  <splash src="splashes/ios/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />

  <!-- Android Splash Screen-->
  <splash src="splashes/android/ldpi.png" platform="android" qualifier="ldpi" />
  <splash src="splashes/android/mdpi.png" platform="android" qualifier="mdpi" />
  <splash src="splashes/android/hdpi.png" platform="android" qualifier="hdpi" />
  <splash src="splashes/android/xhdpi.png" platform="android" qualifier="xhdpi" />
  <splash src="splashes/android/xxhdpi.png" platform="android" qualifier="xxhdpi" />
  <splash src="splashes/android/xxxhdpi.png" platform="android" qualifier="fr-xhdpi" />
</widget >
