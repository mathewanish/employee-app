<?xml version="1.0" encoding="utf-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.DMI.eTechChef" version="0.0.1">
  <name>eTech Chef</name>
  <description>App for DMI’s 4th annual Tech Chef grilling competition.</description>
  <author href="http://DMInc.com" email="amathew@dminc.in">Anish Mathew</author>

  <gap:plugin name="org.apache.cordova.dialogs" />
  <gap:plugin name="org.apache.cordova.splashscreen" />
  <gap:plugin name="org.apache.cordova.network-information" />
  <gap:plugin name="org.apache.cordova.device" />
  <gap:plugin name="org.apache.cordova.statusbar" />


  <!-- Platform on which the App is Supported -->
  <gap:platform name="ios" />
  <gap:platform name="android" />
  <gap:platform name="winphone" />
 
  <!-- Preferences-->
  <preference name="phonegap-version" value="3.7.0" />
  <preference name="orientation" value="portrait" />
  <preference name="target-device" value="universal" />
  <preference name="fullscreen" value="true" />
  <preference name="prerendered-icon" value="true" />
  <preference name="exit-on-suspend" value="true" />
  <!-- iOS: Auto hides the splash on iOS -->
  <preference name="AutoHideSplashScreen" value="false" />
  <!-- android: Timeout for the Splash on Android in milliseconds -->
  <preference name="SplashScreenDelay" value="2000" />
  
  <!-- Default Icon-->
  <icon src="icon.png" />
  
  <!--Icons - Android-->
  <icon src="icons/android/icon-ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
  <icon src="icons/android/mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
  <icon src="icons/android/hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
  <icon src="icons/android/xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
  <icon src="icons/android/xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi" />
  <icon src="icons/android/xxxhdpi.png" gap:platform="android" gap:qualifier="fr-xxhdpi" />

  <!--Icons - iOS 7-->
  <!-- iPhone / iPod Touch  -->
  <icon src="icons/ios6/icon60.png" gap:platform="ios" width="60" height="60" />
  <icon src="icons/ios6/icon120.png" gap:platform="ios" width="120" height="120" />
  <!-- iPad -->
  <icon src="icons/ios6/icon76.png" gap:platform="ios" width="76" height="76" />
  <icon src="icons/ios6/icon152.png" gap:platform="ios" width="152" height="152" />
  <!-- Settings Icon -->
  <icon src="icons/ios6/icon29.png" gap:platform="ios" width="29" height="29" />
  <icon src="icons/ios6/icon58.png" gap:platform="ios" width="58" height="58" />
  <!-- Spotlight Icon -->
  <icon src="icons/ios6/icon40.png" gap:platform="ios" width="40" height="40" />
  <icon src="icons/ios6/icon80.png" gap:platform="ios" width="80" height="80" />

  <!--Icons - iOS 6.1-->
  <!-- iPhone / iPod Touch -->
  <icon src="icons/ios6/icon57.png" gap:platform="ios" width="57" height="57" />
  <icon src="icons/ios6/icon114.png" gap:platform="ios" width="114" height="114" />
  <!-- iPad -->
  <icon src="icons/ios6/icon72.png" gap:platform="ios" width="72" height="72" />
  <icon src="icons/ios6/icon144.png" gap:platform="ios" width="144" height="144" />
  <!-- iPhone Spotlight and Settings Icon -->
  <icon src="icons/ios6/icon29.png" gap:platform="ios" width="29" height="29" />
  <icon src="icons/ios6/icon58.png" gap:platform="ios" width="58" height="58" />
  <!-- iPad Spotlight and Settings Icon -->
  <icon src="icons/ios6/icon50.png" gap:platform="ios" width="50" height="50" />
  <icon src="icons/ios6/icon100.png" gap:platform="ios" width="100" height="100" />

  <!-- Default Splash Screen-->
  <gap:splash src="splash.png" />
  
  <!-- iOS Splash Screen-->
  <!-- iPhone and iPod touch -->
  <gap:splash src="splashes/ios/320x480.png" gap:platform="ios" width="320" height="480" />
  <gap:splash src="splashes/ios/640x960.png" gap:platform="ios" width="640" height="960" />
  <!-- iPhone 5 / iPod Touch (5th Generation) -->
  <gap:splash src="splashes/ios/640x1136.png" gap:platform="ios" width="640" height="1136" />
  <!-- iPad -->
  <gap:splash src="splashes/ios/768x1024.png" gap:platform="ios" width="768" height="1024" />
  <gap:splash src="splashes/ios/1024x768.png" gap:platform="ios" width="1024" height="768" />
  <!-- Retina iPad -->
  <gap:splash src="splashes/ios/1536x2048.png" gap:platform="ios" width="1536" height="2048" />
  <gap:splash src="splashes/ios/2048x1536.png" gap:platform="ios" width="2048" height="1536" />
  
  
  <!-- Android Splash Screen-->
  <gap:splash src="splashes/android/320x426.png" gap:platform="android" gap:qualifier="ldpi" />
  <gap:splash src="splashes/android/320x470.png" gap:platform="android" gap:qualifier="mdpi" />
  <gap:splash src="splashes/android/480x640.png" gap:platform="android" gap:qualifier="hdpi" />
  <gap:splash src="splashes/android/720x960.png" gap:platform="android" gap:qualifier="xhdpi" />
</widget >
